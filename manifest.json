{
  "manifest_version": 2,
  "name": "Coupon Finder",
  "version": "0.1",
  "description": "Find coupons...",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "tabs"
  ],
  "background": {
    "page": "background.html",
    "persistence": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "app.js"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*firebase.com https://www.googleapis.com; object-src 'self'"
}